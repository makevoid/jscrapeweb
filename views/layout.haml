!!! Strict
%html{ html_attrs("en_EN") }
  %head
    %title jScrape - the js content crawling solution
    %link{ href: "/css/main.css", rel: "stylesheet" }
    %meta{ charset: "utf-8" }
    %meta{ :"http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1" }
    %meta{ name: "description", content: "Easily scrape content from javascript bypassing the XMLHTTPRequest Same Origin policy by making ajax requests to the jScrape server" }
    %meta{ name: "keywords", content: "javascript, scrape, js, library, jsonp, same origin policy, ajax, jquery, XMLHTTPRequest" }    
    %meta{ name: "author", content: "Francesco 'makevoid' Canessa" }    
    -# %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    %script{ src: "/js/modernizr.js", type: "text/javascript" }
  %body{ class: body_class }
    #wrap
      #container
        %header
          %h1 
            - link_to "jScrape", "/"
            %span the js content crawling solution
        %nav
        #content
          = yield
        %footer
      %script{ src: "/js/jquery.js", type: "text/javascript" }
      %script{ src: "/js/jscrape/jscrape.js", type: "text/javascript" }
      %script{ src: "/js/main.js", type: "text/javascript" }
      = yield_content :head
      %script{ type: "text/javascript" }

